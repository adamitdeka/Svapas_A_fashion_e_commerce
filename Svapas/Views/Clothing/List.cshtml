
@model List<Svapas.Models.Clothing>
@{
    ViewBag.Title = "List";
}




<h2 class="h2">List of Clothings</h2>

<div style="max-width:800px; margin:0 auto">
    @{ foreach (var Clothing in Model)
        {
            <div style="margin:2em; padding:1em; border-bottom: 1px solid black">
                <!--Clickable link to show a clothing-->
                    <a href="/Clothing/Show/@Clothing.ClothingId">
                        <div id="clothingname" style="font-size: 1.5em;font-weight:bold">@Clothing.ClothingName</div>
                        <div class="clothingimages" style="width:150px; height: 150px">
                            <img src="~/Content/images/c_@(Clothing.ClothingId).png" alt="@Clothing.ClothingName" style="width:100%; height:100%" />
                        </div>
                    </a>
                <div id="clothingdetails" style="padding-left:1em; text-align:left">
                    <div>Price: $@(Clothing.ClothingPrice / 100)</div>
                    <div>Category: @Clothing.ClothingDem @Clothing.Category.CategoryName</div>
                </div>
            </div>
        }
    }
</div>



